extends layout 
block content

    .row.mx-5.mt-3
        each move, i in movies 
            .col-md-3
                .card.mt-3.mb-4.mx-3(style='width: 25rem;')
                    img.card-img-top(src=`${move.imageurl}` style='height:20rem' alt='Sunset Over the Sea')
                    .card-body
                        h3.card-text
                            | #{move.title}
                        h4.card-text
                            | #{move.treaterName}
                        h6.card-footer 
                            |Price: #{move.price}
                            a.button.btn.btn-info.btn-lg.btn-block.mt-3(href='/view/'+move._id) Update